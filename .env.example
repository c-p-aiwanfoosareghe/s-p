# Redis
REDIS_URL=redis://redis:6379/0

# Postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=reels
POSTGRES_USER=reeluser
POSTGRES_PASSWORD=secret

# MinIO / S3
S3_ENDPOINT=minio:9000
S3_REGION=us-east-1
S3_BUCKET=reels
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# Playwright / scraping
USER_AGENTS_FILE=
PROXY_LIST=     # comma separated proxies like http://user:pass@1.2.3.4:port
MAX_REQUESTS_PER_PROXY=10

# CAPTCHA
AUTO_SOLVE=false     # set true to enable automatic solving (risky)
CAPTCHA_PROVIDER=2captcha   # or capsolver
CAPTCHA_API_KEY=

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Misc
LOG_LEVEL=INFO
